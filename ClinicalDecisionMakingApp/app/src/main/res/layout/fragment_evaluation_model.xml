<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp"
    android:background="@color/cardview_light_background"
    tools:context=".ui.EvaluationModelFragment"
    android:orientation="horizontal">


    <ScrollView
        android:id="@+id/patientReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Diagnosis"
                android:textAlignment="center"
                android:textColor="#76A6F0"
                android:textSize="30dp"
                android:textStyle="bold" />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/category1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/lightblue"
                app:hintText="Category 1" />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/category2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/lightblue"
                app:hintText="Category 2" />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/category3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/lightblue"
                app:hintText="Category 3" />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/category4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/lightblue"
                app:hintText="Category 4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/registerPatient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:background="@drawable/greybutton"
                android:clickable="false"
                android:text="Evaluate/Predict"
                android:textColor="#000" />


        </LinearLayout>

    </ScrollView>
</LinearLayout>