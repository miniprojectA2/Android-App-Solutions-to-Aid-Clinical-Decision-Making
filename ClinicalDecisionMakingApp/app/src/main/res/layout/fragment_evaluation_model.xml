<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp"
    android:background="@color/cardview_light_background"
    tools:context=".ui.EvaluationModelFragment"
    android:orientation="horizontal">


    <ScrollView
        android:id="@+id/patientReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Diagnosis"
                android:textAlignment="center"
                android:textColor="#76A6F0"
                android:textSize="30dp"
                android:textStyle="bold" />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/category1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/lightblue"
                app:hintText="skin and nails " />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/category2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/lightblue"
                app:hintText="excretion, and bowel " />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/category3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/lightblue"
                app:hintText="stomach" />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/category4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/lightblue"
                app:hintText="pain " />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/category5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/lightblue"
                app:hintText="female specific" />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/category6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/lightblue"
                app:hintText="common" />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/category7"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/lightblue"
                app:hintText="other" />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/category8"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/lightblue"
                app:hintText="nose" />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/category9"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/lightblue"
                app:hintText="balance and walking" />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/category10"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/lightblue"
                app:hintText="muscle and bones" />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/category11"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/lightblue"
                app:hintText="swelling " />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/category12"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/lightblue"
                app:hintText="brain, heart and vein conditions" />

            <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                android:id="@+id/category13"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/lightblue"
                app:hintText="eyes, throat and mouth " />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/registerPatient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:background="@drawable/greybutton"
                android:clickable="false"
                android:text="Evaluate/Predict"
                android:textColor="#000" />


        </LinearLayout>

    </ScrollView>
</LinearLayout>